---
// src/components/CaseStudiesSection.astro
import { cosmic } from '../lib/cosmic';
import type { CaseStudy } from '../types';
import { ExternalLink, Clock } from 'lucide-astro';

let caseStudies: CaseStudy[] = [];

try {
  const response = await cosmic.objects
    .find({ type: 'case-studies' })
    .props(['id', 'title', 'slug', 'metadata'])
    .depth(1);
  caseStudies = response.objects as CaseStudy[];
} catch (error) {
  console.error('Error fetching case studies:', error);
}
---

<section id="case-studies" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Success Stories
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        See how we've helped businesses transform their digital presence and achieve remarkable results.
      </p>
    </div>
    
    <!-- Case Studies Grid -->
    <div class="grid lg:grid-cols-2 gap-12">
      {caseStudies.map((study) => (
        <article class="group">
          <!-- Featured Image -->
          {study.metadata.featured_image && (
            <div class="relative mb-6 rounded-xl overflow-hidden shadow-lg">
              <img 
                src={`${study.metadata.featured_image.imgix_url}?w=600&h=300&fit=crop&auto=format,compress`}
                alt={study.metadata.project_title || study.title}
                width="600"
                height="300"
                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
              />
              <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-10 transition-all duration-300"></div>
            </div>
          )}
          
          <div class="space-y-4">
            <!-- Project Title and Client -->
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-2">
                {study.metadata.project_title || study.title}
              </h3>
              <div class="flex items-center gap-4 text-sm text-gray-600">
                <span class="font-medium">
                  Client: {study.metadata.client_name}
                </span>
                {study.metadata.project_duration && (
                  <div class="flex items-center gap-1">
                    <Clock size={14} />
                    {study.metadata.project_duration}
                  </div>
                )}
              </div>
            </div>
            
            <!-- Project Summary -->
            {study.metadata.project_summary && (
              <p class="text-gray-600 text-lg">
                {study.metadata.project_summary}
              </p>
            )}
            
            <!-- Technologies Used -->
            {study.metadata.technologies_used && (
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Technologies Used:</h4>
                <div class="flex flex-wrap gap-2">
                  {study.metadata.technologies_used.split('\n').map((tech: string) => (
                    <span class="bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-full">
                      {tech.trim()}
                    </span>
                  ))}
                </div>
              </div>
            )}
            
            <!-- Results Preview (first sentence) -->
            {study.metadata.results && (
              <div class="bg-gray-50 p-4 rounded-lg">
                <h4 class="font-semibold text-gray-900 mb-2">Key Results:</h4>
                <div class="text-gray-700" set:html={study.metadata.results.split('</p>')[0] + '</p>'} />
              </div>
            )}
            
            <!-- Project URL -->
            {study.metadata.project_url && (
              <div class="pt-4">
                <a 
                  href={study.metadata.project_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium transition-colors"
                >
                  View Live Project
                  <ExternalLink size={16} />
                </a>
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>