---
// src/components/Header.astro
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-sm">SP</span>
        </div>
        <span class="text-xl font-bold text-gray-900">Smart Pixel</span>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-600 hover:text-primary-600 transition-colors">Home</a>
        <a href="#services" class="text-gray-600 hover:text-primary-600 transition-colors">Services</a>
        <a href="#team" class="text-gray-600 hover:text-primary-600 transition-colors">Team</a>
        <a href="#case-studies" class="text-gray-600 hover:text-primary-600 transition-colors">Case Studies</a>
        <a href="#testimonials" class="text-gray-600 hover:text-primary-600 transition-colors">Testimonials</a>
        <a href="#contact" class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors">
          Get Started
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <div class="flex flex-col space-y-4">
        <a href="/" class="text-gray-600 hover:text-primary-600 transition-colors">Home</a>
        <a href="#services" class="text-gray-600 hover:text-primary-600 transition-colors">Services</a>
        <a href="#team" class="text-gray-600 hover:text-primary-600 transition-colors">Team</a>
        <a href="#case-studies" class="text-gray-600 hover:text-primary-600 transition-colors">Case Studies</a>
        <a href="#testimonials" class="text-gray-600 hover:text-primary-600 transition-colors">Testimonials</a>
        <a href="#contact" class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors inline-block text-center">
          Get Started
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuBtn && mobileMenu) {
      menuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>