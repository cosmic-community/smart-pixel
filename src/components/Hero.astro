---
// src/components/Hero.astro
import { Star, ArrowRight } from 'lucide-astro';
---

<section class="bg-gradient-to-br from-gray-50 to-white py-20 lg:py-24">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Hero Headline -->
      <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6 animate-fade-in">
        Transform Your Digital <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-primary-700">Presence</span>
      </h1>
      
      <!-- Hero Subheadline -->
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto animate-slide-up">
        We help businesses grow through exceptional design, development, and digital marketing solutions that deliver measurable results.
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 animate-slide-up">
        <a 
          href="#services" 
          class="bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-all duration-300 hover:scale-105 shadow-lg flex items-center gap-2"
        >
          View Our Services
          <ArrowRight size={20} />
        </a>
        <a 
          href="#case-studies" 
          class="border-2 border-primary-600 text-primary-600 px-8 py-4 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-all duration-300"
        >
          See Our Work
        </a>
      </div>
      
      <!-- Social Proof -->
      <div class="animate-scale-in">
        <div class="flex items-center justify-center gap-2 text-yellow-400 mb-2">
          {[1, 2, 3, 4, 5].map(() => (
            <Star size={20} fill="currentColor" />
          ))}
        </div>
        <p class="text-gray-600">
          <span class="font-semibold text-gray-900">5.0 rating</span> from satisfied clients
        </p>
      </div>
    </div>
  </div>
</section>